# 로컬 개발용 예시 파일 (Cloudtype에서는 .env를 자동으로 읽지 않습니다)
DATABASE_URL="postgresql://USER:PASSWORD@HOST:PORT/DB?schema=public"

# 관리자 로그인 (프로덕션에서는 반드시 변경하세요)
# 생성 방법: openssl rand -hex 32
ADMIN_SECRET_KEY="change-me-long-random-string"
SESSION_SECRET="change-me-long-random-string"

# YouTube Data API (포트폴리오 동기화용)
YOUTUBE_API_KEY="your-youtube-api-key"

# LinkPreview API (후기 썸네일/제목/내용 자동 추출용)
LINKPREVIEW_API_KEY="your-linkpreview-api-key"

